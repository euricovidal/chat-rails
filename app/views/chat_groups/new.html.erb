<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Chat Groups</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Chat Groups', chat_groups_path %></div>
      <div class="breadcrumb-item">New Chat Group</div>
    </div>
  </div>
  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>New Chat Group</h4>
      </div>
      <div class="card-body">
        <%= render 'form', chat_group: @chat_group %>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-arrow-left', 'Back'), chat_groups_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'New Chat Group') %>
